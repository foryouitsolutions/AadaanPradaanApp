<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="#f7f7f7"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/nearbyDevices"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="30dp"
     />

    <TextView
        android:id="@+id/search"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:fontFamily="@font/lato"
        android:gravity="center_horizontal"
        android:layout_alignParentTop="true"
        android:layout_marginTop="10dp"
        android:textColor="#303030"
        android:textAllCaps="true"
        android:textSize="18sp"
        android:textStyle="bold" />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:fontFamily="@font/lato_thin"
        android:gravity="center"
        android:paddingTop="220dp"
        android:text="Send files with blazing \n fast speed"
        android:textColor="#303030"
        android:textSize="22sp"
        android:textStyle="bold" />

    <LinearLayout
        android:id="@+id/linearLayout1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="100dp"
        android:gravity="center"
        android:layout_alignParentBottom="true"
        android:orientation="horizontal" >

        <Button
            android:id="@+id/send"
            android:layout_width="wrap_content"
            android:layout_height="60dp"
            android:layout_marginEnd="16dp"
            android:backgroundTint="#5cb85c"
            android:drawableLeft="@drawable/ic_baseline_arrow_upward_24"
            android:drawableTint="#fff"
            android:fontFamily="@font/lato"
            android:padding="10dp"
            android:paddingEnd="30dp"
            android:paddingStart="25dp"
            android:text="Send"
            android:textSize="20dp"
            android:textAllCaps="false"
            android:textColor="#fff" />

        <Button
            android:id="@+id/receive"
            android:layout_width="wrap_content"
            android:layout_height="60dp"
            android:backgroundTint="#1a73e9"
            android:padding="10dp"
            android:fontFamily="@font/lato"
            android:paddingEnd="30dp"
            android:paddingStart="25dp"
            android:drawableLeft="@drawable/ic_baseline_arrow_downward_24"
            android:drawableTint="#fff"
            android:textColor="#fff"
            android:textAllCaps="false"
            android:textSize="20dp"
            android:text="Receive"
            />

    </LinearLayout>

</RelativeLayout>